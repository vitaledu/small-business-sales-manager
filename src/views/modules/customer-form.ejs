<div class="page-header">
  <h1><%= customer ? '‚úèÔ∏è Editar Cliente' : '‚ûï Novo Cliente' %></h1>
</div>

<form method="POST" action="<%= customer ? '/clientes/' + customer.id + '/editar' : '/clientes' %>" class="form-card">
  <div class="form-group">
    <label>Nome Completo *</label>
    <input type="text" name="name" value="<%= customer ? customer.name : '' %>" required>
  </div>

  <div class="form-group">
    <label>Tipo de Cliente *</label>
    <select name="type" required>
      <option value="">Selecione...</option>
      <option value="PF" <%= customer && customer.type === 'PF' ? 'selected' : '' %>>Pessoa F√≠sica</option>
      <option value="REVENDEDOR" <%= customer && customer.type === 'REVENDEDOR' ? 'selected' : '' %>>Revendedor</option>
    </select>
  </div>

  <div class="form-row">
    <div class="form-group">
      <label>Telefone</label>
      <input type="tel" name="phone" value="<%= customer ? customer.phone || '' : '' %>">
    </div>

    <div class="form-group">
      <label>Logradouro</label>
      <input type="text" name="address" value="<%= customer ? customer.address || '' : '' %>">
    </div>
  </div>

  <div class="form-group">
    <label>Bairro</label>
    <input type="text" name="neighborhood" value="<%= customer ? customer.neighborhood || '' : '' %>">
  </div>

  <div class="form-actions">
    <a href="/clientes" class="btn btn-secondary">‚Üê Cancelar</a>
    <button type="submit" class="btn btn-primary"><%= customer ? 'üíæ Atualizar' : 'üíæ Criar Cliente' %></button>
  </div>
</form>
